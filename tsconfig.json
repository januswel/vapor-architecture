{
  "compilerOptions": {
    "charset": "utf8",
    "newLine": "LF",
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./modules",
    "paths": {
      "@januswel/*": ["./*/src"]
    }
  }
}
